{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "christina.server.server:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=5000",
                "--ssl-certfile=${env:HOME}/cert/local-cert.pem",
                "--ssl-keyfile=${env:HOME}/cert/local-key.pem"
            ],
            "jinja": true
        }
    ]
}